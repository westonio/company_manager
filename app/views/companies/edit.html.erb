<h1>Edit Company Info</h1>

<%= form_with id: "edit_company", url: "/companies/#{@company.id}", method: :patch, local: true do |form| %>
  <%= form.label :name, "Name" %>
  <%= form.text_field :name, value: @company.name %><br/>
  <%= form.label :federal_ein, "Federal EIN" %>
  <%= form.number_field :federal_ein, value: @company.federal_ein%><br/>
  <%= form.label :non_profit, "Non Profit?" %>
  <%= form.select :non_profit, [["True", "true"],["False", "false"]], selected: @company.non_profit %><br/>
  <%= form.label :address_line_1, "Address Line 1" %>
  <%= form.text_field :address_line_1, value: @company.address_line_1 %><br/>
  <%= form.label :address_line_2, "Address Line 2" %>
  <%= form.text_field :address_line_2, value: @company.address_line_2 %><br/>
  <%= form.label :city, "City" %>
  <%= form.text_field :city, value: @company.city %><br/>
  <%= form.label :state, "State" %>
  <%= form.text_field :state, value: @company.state %><br/>
  <%= form.label :zipcode, "Zip Code" %>
  <%= form.text_field :zipcode, value: @company.zipcode %><br/>

  <%= form.submit "Save Company" %>
<% end %>