<h1>Add New Employee for <%= @company.name %></h1>

<%= form_with id: "new_employee", url: "/companies/#{@company.id}/employees", method: :post, local: true do |form| %>
  <%= form.label :first_name, "First Name" %>
  <%= form.text_field :first_name %>
  <%= form.label :last_name, "Last Name" %>
  <%= form.text_field :last_name %>
  <%= form.label :i9_eligible, "i9 Eligible?" %>
  <%= form.select :i9_eligible, [["True", "true"],["False", "false"]], selected: "true" %>
  <%= form.label :benefits_eligible, "Benefits Eligible?" %>
  <%= form.select :benefits_eligible, [["True", "true"],["False", "false"]], selected: "false" %>
  <%= form.label :salary, "Salary" %>
  <%= form.number_field :salary %>

  <%= form.submit "Save Employee" %>
<% end %>